<section id="contenedorBasicoLocales">
<h1>Lista de Locales</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Direccion</th>
    <th>Distrito</th>
    <th>Telefono Fijo</th>
  </tr>

<% @locals.each do |local| %>
  <tr>
    <td><%= local.name %></td>
    <td><%= local.address %></td>
    <td><%= local.district.name.to_s %></td>
    <td><%= local.phone %></td>
    <td><%= link_to 'Mostrar', local %></td>
    <td><%= link_to 'Editar', edit_local_path(local) %></td>
    <td><%= link_to 'Eliminar', local, confirm: 'Esta Seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Local', new_local_path %>
<%= gmaps4rails(@json) %>
</section>

