<section id="contenedorBasico">
<h1>Tarifas</h1>

<table border="1">
  <tr>
    <th>Hora Inicio</th>
    <th>Hora Fin</th>
    <th>Precio</th>
    <th>Promo</th>
    <th>Fecha Inicio</th>
    <th>Fecha Fin</th>
    <th>Lun</th>
    <th>Mar</th>
    <th>Mie</th>
    <th>Jue</th>
    <th>Vie</th>
    <th>Sab</th>
    <th>Dom</th>
    
  </tr>

<% @rates.each do |rate| %>
  <tr>
    <td><%= rate.start_time.strftime("%H:%M") %></td>
    <td><%= rate.end_time.strftime("%H:%M") %></td>
    <td><%= rate.price %></td>
    <td><%= rate.promocio %></td>
    <td><%= rate.start_date %></td>
    <td><%= rate.end_date %></td>
   
<td> <%= if rate.monday == true
      image_tag("check.png", :border=>0)
      else 
      image_tag("icon_eliminar.png", :border=>0)
     end %> </td>

<td> <%= if rate.tuesday  == true
      image_tag("check.png", :border=>0)
      else 
      image_tag("icon_eliminar.png", :border=>0)
     end %> </td>	 
	 
<td> <%= if rate.wednesday== true
      image_tag("check.png", :border=>0)
      else 
      image_tag("icon_eliminar.png", :border=>0)
     end %> </td>  

	 <td> <%= if rate.thursday== true
      image_tag("check.png", :border=>0)
      else 
      image_tag("icon_eliminar.png", :border=>0)
     end %> </td>  

<td> <%= if rate.friday == true
      image_tag("check.png", :border=>0)
      else 
      image_tag("icon_eliminar.png", :border=>0)
     end %> </td>  	 
	
<td> <%= if rate.saturday== true
      image_tag("check.png", :border=>0)
      else 
      image_tag("icon_eliminar.png", :border=>0)
     end %> </td>  

<td> <%= if rate.sunday== true
      image_tag("check.png", :border=>0)
      else 
      image_tag("icon_eliminar.png", :border=>0)
     end %> </td>  	 
   
	<td><%= link_to image_tag("ver.gif", :border=>0), rate  %></td>
	 <!--<td><%= link_to image_tag("editar.gif", :border=>0), edit_rate_path(rate) %></td>-->
	 <!--<td><%= link_to image_tag("icon_eliminar.png", :border=>0), rate, confirm: 'Are you sure?', method: :delete %></td>-->
    
	
	
  </tr>
<% end %>
</table>


<br />

